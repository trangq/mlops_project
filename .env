# Environment variables for local dev
# MinIO (S3) - used by DVC/MLflow artifact store
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=mlops-bucket
MINIO_ENDPOINT=minio:9000

# MLflow
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_ARTIFACT_ROOT=s3://mlops-bucket/artifacts

# Airflow
AIRFLOW__CORE__SQL_ALCHEMY_CONN=sqlite:///airflow.db
AIRFLOW__CORE__EXECUTOR=LocalExecutor

# FastAPI
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# Prometheus/Grafana - default ports
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Docker networking
NETWORK_NAME=mlops-net
